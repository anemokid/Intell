<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/round_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/level_one"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintStart_toEndOf="@+id/stone1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stone3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="212dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stone4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="304dp"
        android:layout_marginTop="124dp"
        android:src="@drawable/x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stone5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="236dp"
        android:layout_marginTop="124dp"
        android:src="@drawable/x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stone6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="140dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/o"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stone7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="76dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/o"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stone8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/o"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stone9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="124dp"
        android:src="@drawable/o"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stone10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="108dp"
        android:layout_marginTop="124dp"
        android:src="@drawable/o"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="#fff"
        android:columnCount="3"
        android:columnWidth="320dp"
        android:orientation="vertical"
        android:rowCount="3"
        android:stretchMode="columnWidth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/topleft"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0">

            <ImageView
                android:id="@+id/myimage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/board" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/middleleft"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/myimage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/board" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomleft"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape">

            <ImageView
                android:id="@+id/myimage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/board" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/topmiddle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape">

            <ImageView
                android:id="@+id/myimage4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/board" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/middle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape">

            <ImageView
                android:id="@+id/myimage5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/board" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/middlebottom"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape">

            <ImageView
                android:id="@+id/myimage6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/board" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/topright"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape">

            <ImageView
                android:id="@+id/myimage7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/board" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/middleright"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape">

            <ImageView
                android:id="@+id/myimage8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/board" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomright"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape">

            <ImageView
                android:id="@+id/myimage9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/board" />
        </LinearLayout>

    </GridLayout>

</android.support.constraint.ConstraintLayout>