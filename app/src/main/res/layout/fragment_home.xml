<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.sweetseedsapp.fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/home_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:color="#000"
        android:layout_margin="15dp"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <ImageView
            android:id="@+id/home_card_iv"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:background="#000"
            android:src="@drawable/games_coming_soon"/>

    </android.support.v7.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/home_card_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="280dp"/>

    <TextView
        android:id="@+id/home_card_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="305dp"/>

    <TextView
        android:id="@+id/home_card_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="330dp"/>

    <TextView
        android:id="@+id/home_card_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="355dp"/>

</FrameLayout>
