<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/badge_banner"
        android:layout_width="match_parent"
        android:src="@drawable/badge_banner"
        android:layout_height="140dp" />

    <TextView
        android:id="@+id/badge_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/badge_banner"
        android:layout_marginTop="13dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="150dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/inner_rv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/badge_update"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/how_to_use_badge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/inner_rv"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/collectible_explained"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/how_to_use_badge"
        android:layout_marginTop="17dp" />

    <ImageView
        android:id="@+id/collectible"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/collectible_explained"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/points_toward_collectible"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/collectible"
        android:layout_marginTop="21dp" />

</RelativeLayout>